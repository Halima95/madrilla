<% provide(:title, "Reset Password") %>
<h1>Reset Password</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_tag recover_path do %>
		<%= hidden_field_tag :reset_code, @reset_code %>
			<p>
				Please enter your email and click the button below. We will send
				you a unique link in your email that you can use to reset your password.
			</p>
		<div>
			<%= label_tag :email %> 
			<%= email_field_tag :email %>
		</div>
		<div>
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</div>
		<div>
			<%= label_tag :password_confirmation %>
			<%= password_field_tag :password_confirmation %>
		</div>
		<div>
			<%= submit_tag "Save", name: nil, class: "btn btn-large btn-primary" %>
		</div>

		<% end %>
	</div> 
</div>
