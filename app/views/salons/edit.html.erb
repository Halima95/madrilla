<% provide(:title, "Edit Salon") %> 
<h1>Update Your Salon Profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@salon) do |f| %>
      <!-- %= #render 'shared/error_messages' %> -->

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :zip %>
      <%= f.text_field :zip %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>


      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>