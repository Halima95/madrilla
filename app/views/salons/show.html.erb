<% provide(:title, @salon.name) %>

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @salon.name %>
			</h1>
			<%= @salon.address %>,
			<%= @salon.city %>, <%= @salon.state %> <%= @salon.zip %>
			<br/>
			<%= link_to "Web Site", @salon.url %>

			<p>
			<%= link_to 'Book an appointment', select_stylist_path %>
		</p>
		
			<div id="stylists">
				<h3>Stylists at <%= @salon.name %></h3>

				<table>
					<% @salon.employees.each do |e| %>
					<tr>
					<td><%= link_to e.stylist.name, e.stylist %><%= " - *admin" if e.salon_admin? %></td>
					<!-- <td>< %= link_to "Make Admin", toggle_admin_path(@salon, e) % ></td> -->
					</tr>
					<% end %>
				</table>
		</div>

		

		<% if @salon.salon_admin?(current_user) || current_user.admin? %>
		<h3>Add a Stylist to <%= @salon.name %></h3>
		<div id="newStylist">
			<%= form_for([@salon, @employee]) do |f| %>
			<div>
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
			<div>
		 		<%= f.label :email %>
				<%= f.email_field :email %>
			</div>
			<div>
				<%= f.submit "Add New Stylist" %>
			</div>
			<% end %>
		</div>
		<% end %>

		</section>
	</aside>

</div>

<%= link_to 'Salon List', salons_path %>

