<% provide(:title, @salon.name) %>

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @salon.name %>
			</h1>
			<%= @salon.address %>,
			<%= @salon.city %>, <%= @salon.state %> <%= @salon.zip %>
			<br/>
			<%= link_to "Web Site", @salon.url %>

			<p>
			<%= link_to 'Book an appointment', select_stylist_path %>
		</p>
		
			<div id="stylists">
				<h3>Stylists at <%= @salon.name %></h3>
				<ul>
					<% @salon.users.each do |stylist| %>
					<li><%= link_to stylist.name, stylist %></li>
					<% end %>
				</ul>
		</div>

		<!-- 
		# TODO: pull this form out into a partial and
		# render it only if the logged in user is a salon admin
		# FOR THIS SALON
	-->

		<h3>Add a Stylist to <%= @salon.name %></h3>
		<div id="newStylist">
			<%= form_for([@salon, @employee]) do |f| %>
			<div>
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
			<div>
		 		<%= f.label :email %>
				<%= f.email_field :email %>
			</div>
			<div>
				<%= f.submit "Add New Stylist" %>
			</div>
			<% end %>
		</div>

		</section>
	</aside>

</div>
<%= link_to 'Salon List', salons_path %>

