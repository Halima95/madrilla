
<h1>Book Appointment at <%= @salon.name %></h1>


<h3>Select a Stylist</h3>

<% @salon.employees.each do |employee| %>
	<div class="stylist">
		<div class="stylist_img">
		<% if employee.stylist.image.to_s == "" %>
			<%= link_to image_tag("no_picture.png"), new_appointment_path(employee_id: employee.id) %>

		<% else %>
			<%= link_to image_tag(employee.stylist.image_url(:thumb).to_s), new_appointment_path(employee_id: employee.id) %>
		<% end %>
		</div>
		<div class="stylist_name">
			<%= link_to employee.stylist.name, new_appointment_path(employee_id: employee.id) %>
		</div>
	</div>
<% end %>