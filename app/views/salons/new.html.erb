<% provide(:title, "New Salon") %>
<h1>Sign up a new salon</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@salon) do |f| %>
			<!-- %= # render 'shared/error_messages' % -->

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %> 
			<%= f.text_field :email %>

			<%= f.label :address %>
			<%= f.text_field :address %>
			
			<%= f.label :city %>
			<%= f.text_field :city %>
			
			<%= f.label :state %>
			<%= f.text_field :state %>
			
			<%= f.label :zip %>
			<%= f.text_field :zip %>

			<%= f.label :phone %>
			<%= f.text_field :phone %>

			<%= f.submit "Sign up salon", class: "btn btn-large btn-primary" %>

		<% end %>

	</div> 
</div>
