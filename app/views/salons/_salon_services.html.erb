
<h1><%= @salon.name %> Services </h1>

<%= form_tag( new_appointment_path, method: :get ) do %>
<table id="salon_services">
	<tr>
		<th>&nbsp;</th><th style="text-align: left">Service</th><th style="text-align: right">Price</th>
	</tr>
		<% @salon.services.each do |service| %>
		<tr>

		  <td><%= check_box_tag 'service[]', service.id %> </td>
		  <td>
		  	<%= service.name %>
		  	<% if service.description != "" %>
		  		<br/><i><%= service.description  %></i>
		  	<% end %>
		  </td>
		  <td style="text-align: right"> 
		  	<div class="service_price" id="service_<%= service.id %>">
		  		<%= number_with_precision(service.price, precision: 2) %>
		  	</div>
		  </td>

		</tr>
	<% end %>

</table>

<%= submit_tag "Next", class: "btn btn-large"  %>
<% end %>

<div id="estimated_cost">
	Estimated Cost: $<div id="service_total">0.00</div>
</div>
<div class="alert">
	All prices are estimates for our services. Your actual
	total may be higher or lower based upon your hair length,
	thickness, or condition.
</div>
