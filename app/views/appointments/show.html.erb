<p id="notice"><%= notice %></p>

<p>
  <b>Client:</b>
  <%= @appointment.client.name %>
</p>

<p>
  <b>Stylist:</b>
  <%= @appointment.stylist.name %>
</p>

<p>
  <b>Appointment time:</b>
  <%= @appointment.appointment_time.strftime('%m/%d/%Y') + " at " +
  	@appointment.appointment_time.strftime(' %l:%M %p') %>
</p>

<p>
  <b>Appointment status:</b>
  <%= @appointment.status %>
</p>


