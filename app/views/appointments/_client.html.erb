
<% @appointments.each do |appointment| %>
  <p>
  Salon: <%= appointment.salon.name %><br/>
  Stylist: <%= appointment.stylist.name %><br/>
  Date: <%= appointment.appointment_time.strftime("%m/%d/%Y") %><br/>
  Time: <%= appointment.appointment_time.strftime("%l:%M %p") %><br/>
  Phone <%= appointment.salon.phone %><br/>
  Email: <%= appointment.stylist.email %><br/>
  Status: <%= appointment.status %>
  <br/>
  
  <%= button_to 'Confirm', confirm_appointment_path(appointment), class: "btn btn-small" if appointment.pending_client_approval? %>
  <%= button_to 'Cancel', cancel_appointment_path(appointment), confirm: "Are you sure you want to cancel this appointment?", class: "btn btn-small" if !appointment.canceled? %>
  <%= button_to 'Change', edit_appointment_path(appointment), method: :get, class: "btn btn-small" if !appointment.canceled? %>

  </p>
<% end %>