<h1>Clients</h1>

<table>
	<tr>
		<th>&nbsp;</th>
		<th>Name</th>
		<th>Phone</th>
		<th>Email</th>
		<th>Last Appt</th>
	</tr>
<% @clients.each do |client| %>
	<tr>
		<td>
			<% if client.image.to_s == "" %>
				<%= image_tag("no_picture.png") %>
			<% else %>
				<%= image_tag client.image_url(:thumb).to_s %>
			<% end %>
		</td>
		<td>
			<%= client.name %>
		</td>
		<td>
			<%= client.phone %>
		</td>
		<td>
			<%= mail_to client.email %>
		</td>
		<td>
			<%= client.appointments.last.appointment_time.strftime('%B %d, %Y') %>
		</td>
	</tr>
<% end %>
</table>