<% provide(:title, "Sign in") %>
<h2>Already have an account? Sign In</h2>

<div class="row">
	<div class="span4">
		<%= form_for(:session, url: sessions_path) do |f| %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Sign in", class: "btn btn-large btn-primary" %> <%= link_to "Forgot password?", forgot_password_path %>

		<% end %>

		<p>
			New user? <%= link_to "Sign up now!", signup_path %> 
		</p>
	</div>
</div>